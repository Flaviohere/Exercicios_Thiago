#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    float vetor[n];
    
    cin >> vetor [0];
    float maior = vetor[0];
    int posicao = 0;

    for (int i = 1; i < n; i++) {
        cin >> vetor[i];
        if (vetor[i] > maior) {
            maior = vetor[i];
            posicao = i;
            
        }
    }
    printf("maior: %.1f na posicao: %d", maior, posicao);
}
