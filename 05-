#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    int vetor[n], soma = 0, qtd = 0;

    for (int i = 0; i < n; i++) {
        cin >> vetor[i];
        if (vetor[i] % 2 == 0) {
            soma += vetor[i];
            qtd++;
        }
    }

    if (qtd > 0) {
        float media = (float)soma / qtd;
        cout << fixed << setprecision(1) << media << endl;
    } else {
        cout << "Nenhum nÃºmero par." << endl;
    }

    return 0;
}
